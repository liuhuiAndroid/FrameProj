<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/md_white_1000"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextColor="@color/md_grey_500"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tab_layout"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_line"
        android:layout_marginBottom="30dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 主LinearLayout -->
            <LinearLayout
                android:id="@+id/vanTypeView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="16.0dip">

                <!-- 第一块LinearLayout 包括ViewPager和描述信息 -->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 选择车的ViewPager-->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="96.0dip"
                        android:layout_marginTop="8.0dip"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/lIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:paddingLeft="16.0dip"
                            android:paddingRight="16.0dip"
                            android:src="@drawable/btn_vehicles_left_arrow"
                            android:visibility="invisible"/>

                        <android.support.v4.view.ViewPager
                            android:id="@+id/viewPager"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0"
                            android:background="#ffffffff"
                            android:overScrollMode="never"/>

                        <ImageView
                            android:id="@+id/rIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:paddingLeft="16.0dip"
                            android:paddingRight="16.0dip"
                            android:src="@drawable/btn_vehicles_right_arrow"/>
                    </LinearLayout>

                    <!-- 车的描述信息-->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="32.0dip"
                        android:layout_marginBottom="16.0dip"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginRight="16.0dip"
                        android:layout_marginTop="16.0dip"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/vehicleWeight"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/black_87_percent"
                                android:textSize="14.0sp"/>

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:text="载重"
                                android:textColor="@color/black_38_percent"
                                android:textSize="12.0sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/vehicleSize"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/black_87_percent"
                                android:textSize="14.0sp"/>

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:text="长*宽*高"
                                android:textColor="@color/black_38_percent"
                                android:textSize="12.0sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/vehicleVolume"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/black_87_percent"
                                android:textSize="14.0sp"/>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:text="载货体积"
                                android:textColor="@color/black_38_percent"
                                android:textSize="12.0sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- 第一块结束 间隔-->
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/black_12_percent"/>

                <!-- 选择起始地 -->
                <LinearLayout
                    android:id="@+id/llAddrOF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16.0dip"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_marginTop="16.0dip"
                    android:background="@drawable/shape_rounded_white_radius_2dp"
                    android:orientation="vertical"
                    android:paddingBottom="2.0dip"
                    android:paddingTop="2.0dip">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginRight="8.0dip"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent">

                            <LinearLayout
                                android:id="@+id/lineV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@color/transparent"
                                android:orientation="vertical">

                                <View
                                    android:id="@+id/topline"
                                    android:layout_width="0.5dip"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.0"
                                    android:background="@color/md_white_1000"/>

                                <View
                                    android:id="@+id/bottomline"
                                    android:layout_width="0.5dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1.0"
                                    android:background="@color/md_grey_300"
                                    android:paddingLeft="5.0dip"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_start"/>
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/editLayout"
                            android:layout_width="fill_parent"
                            android:layout_height="56dp"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <com.android.frameproj.library.widget.SuperEditTextPlus
                                android:id="@+id/seStPtOF"
                                android:layout_width="fill_parent"
                                android:layout_height="0.0dip"
                                android:layout_weight="1.0"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bottom_stop_container"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginRight="8.0dip"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@color/transparent"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="0.5dip"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.0"
                                    android:background="@color/md_grey_300"/>

                                <View
                                    android:layout_width="0.5dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1.0"
                                    android:background="@color/md_white_1000"
                                    android:paddingLeft="5.0dip"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_dest"/>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="56dp"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <com.android.frameproj.library.widget.SuperEditTextPlus
                                android:id="@+id/nextDestOF"
                                android:layout_width="fill_parent"
                                android:layout_height="0.0dip"
                                android:layout_weight="1.0"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="下一步"/>

</RelativeLayout>